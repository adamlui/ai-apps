{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "2024.9.18.2",
  "author": "Adam Lui",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "223": "icons/icon223.png"
  },
  "permissions": [ "storage" ],
  "action": { "default_popup": "popup/index.html" },
  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": ["app.json", "lib/settings-utils.js", "lib/chatgpt.js"]
  }],
  "content_scripts": [{
    "matches": ["https://chatgpt.com/*", "https://www.perplexity.ai/*", "https://poe.com/*"],
    "js": ["content.js"]
  }],
  "minimum_chrome_version": "88"
}
